<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OrgOutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">4dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OrgImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="OutlinedTextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="OrgCardView" parent="CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="NameCardView" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="DescriptionCardView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="PriceCardView" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2E9205</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="QuantityCardView" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="KeyFieldCardView" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="ValueFieldCardView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:gravity">start|center</item>
    </style>

    <style name="ErrorTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TitleScreenTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="OrgFloatingActionButton" parent="Widget.Design.FloatingActionButton" >
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:elevation">16dp</item>
    </style>

    <style name="roundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>